extends index
body
block content
  .container
    h5
      span(style='color: forestgreen') Number of Products in Database  (#{Object.keys(products).length})
    br
    h3  Admin - Remove Your Product 
    #form-div      
          form.needs-validation(method='post', action='/admin-products', name='removeProducts', novalidate='')
            table.table.table-striped.table-dark
              thead
                tr
                  th(scope='col') 
                      input#validationCustom01.form-control(type='id',placeholder='id', name='id')
            button.btn.btn-primary(type='Remove Product') Remove Product
            br
          br
          h3 Products List In Database             
          #usersCard
              each product in products.reverse()     
                    .form.col-12
                        ul.list-group
                            li.list-group-item
                             span(style='color:black')  id:
                             span(style='color:forestgreen')   #{product._id}
                             br
                             span(style='color:black')  category:
                             span(style='color:forestgreen')   #{product.category} 
                             br
                             span(style='color:black')  src:
                             span(style='color:forestgreen')   #{product.src}
                             br
                             span(style='color:black')  name:
                             span(style='color:forestgreen')   #{product.name}
                             br
                             span(style='color:black')  brand:
                             span(style='color:forestgreen')   #{product.brand}
                             br
                             span(style='color:black')  price:
                             span(style='color:forestgreen')   #{product.price}
                            br
                          br       