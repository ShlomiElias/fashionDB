                  .dropdown-menu
                    a.dropdown-item(href='/admin-users') Users
                    a.dropdown-item(href='/admin-products') Products - delete
                    a.dropdown-item(href='/admin-products-add') Products - add
                    a.dropdown-item(href='/admin-products-edit') Products - edit
            form.form-inline.my-2.my-lg-0
            ul.nav.navbar-nav.navbar-right
              a.nav-link(href='/homepage') Logout
